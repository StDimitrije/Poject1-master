<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    >

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="10dp"
      app:cardElevation="15dp"
      >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="10dp"
          android:paddingRight="5dp"
          >
          <TextView
              android:id="@+id/list_item_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:textStyle="bold"
              android:layout_marginTop="15dp"
              android:textColor="@color/darkGrey"
              />
          <TextView
              android:id="@+id/list_item_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:textColor="@color/darkGrey"/>

          <TextView
              android:id="@+id/list_item_category"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/list_item_name"
              android:textSize="15sp"
              android:layout_marginTop="20dp"
              android:textColor="@color/darkGrey"
              />
          <TextView
              android:id="@+id/list_item_cost"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/list_item_category"
              android:layout_marginTop="20dp"
              android:textSize="15sp"
              android:textColor="@color/darkGrey"
              android:layout_marginBottom="20dp" />
          <Button
              android:id="@+id/list_item_btn_remove"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:text="Remove"
              android:layout_marginLeft="50dp"
              android:background="@drawable/pink_round_button"
              android:layout_below="@+id/list_item_cost"
              android:elevation="10dp"/>
          <Button
              android:id="@+id/list_item_btn_details"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:text="Details"
              android:layout_below="@id/list_item_cost"
              android:layout_alignParentRight="true"
              android:layout_marginRight="50dp"
              android:elevation="10dp"
              android:background="@drawable/blue_round_button"/>
      </RelativeLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>